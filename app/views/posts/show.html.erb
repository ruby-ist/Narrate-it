<h1 class="index-title post-title"><%= @post.title %></h1>
<div class="hr-line"></div>
<p class="index-body"><%= @post.body%></p>

<h3 class="comments">Comments:</h3>
<% @post.comments.each do |c| %>
	<p class="commenter"><%= c.name %></p>
	<p class="comment"><%= c.comment %></p>
<% end %>


<h4 class="comments">Add Comment:</h4>
<%= form_with model: [@post, @post.comments.build] do |f| %>
	<%= f.label :name %>: <br/>
	<%= f.text_field :name, class: "title-input cmnt-title", autocomplete: 'off' %>
	<%= f.submit "submit", class: "read-btn cmnt-btn" %> <br/>
	<%= f.label :comment %>: <br/>
	<%= f.text_area :comment, class: "body-input cmnt-body"%> <br/>
<% end %>

